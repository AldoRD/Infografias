<nav>
  <ul>
    <li><a href='#home'>Inicio</a></li>
    <li><a href='#info'>¿Qué es esto?</a></li>
    <li><a href='#cards'>Infografías</a></li>
  </ul>
  <span id='toggle'><i id='icon' class='fa-solid fa-arrow-down'></i></span>
</nav>

<style>
  nav {
    width: 100%;
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    padding: 5px 0px;

    background: rgba(255, 255, 255, 0.3);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.18);

    transform: translateY(-200px);

    z-index: 5000;
  }

  nav span {
    position: absolute;
    bottom: -65px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    color: #fff;
    font-size: 1.75rem;
    box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1);

    background: rgba(0, 0, 0, 0.7);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.18);

    transition: all 300ms ease-in-out;
  }

  nav span i {
    transform: rotate(0deg);
    transition: transform 0.3s ease-in-out;
  }

  nav span i.open {
    transform: rotate(180deg);
  }

  nav ul {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 15px;
    width: 100%;
    list-style: none;
  }

  nav ul span:hover {
    background-color: #333;
    color: #fff;
  }

  nav ul li {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;

    transition: all 300ms ease-in-out;
  }

  nav ul li a {
    width: 200px;
    color: #222;
    padding: 10px;
    text-align: center;
    font-size: 1.25rem;
    font-weight: 800;
    display: inline-block;
  }

  nav ul li:hover a {
    box-shadow: 0px 2px 0px #222;
  }
</style>

<script>
  import anime from 'animejs'

  const toggle = document.getElementById('toggle')
  const icon = document.getElementById('icon')
  let anim = null
  let isOpen = false

  anime({
    targets: 'nav',
    translateY: [-300, -200],
    opacity: [0, 1],
    autoplay: true,
    easing: 'easeInOutSine',
    delay: 750,
    duration: 300,
  })

  const toggleAnim = anime({
    targets: '#toggle',
    translateY: [0, 75, 0],
    autoplay: true,
    easing: 'linear',
    loop: true,
    duration: 1000,
  })

  const animClose = anime({
    targets: 'nav',
    translateY: [0, -200],
    autoplay: false,
    easing: 'easeInOutSine',
    duration: 300,
    delay: 0,
    complete: () => {
      icon.classList.remove('open')
    },
  })

  const animOpen = anime({
    targets: 'nav',
    translateY: [-200, 0],
    autoplay: false,
    easing: 'easeInOutSine',
    duration: 300,
    delay: 0,
    complete: () => {
      icon.classList.add('open')
    },
  })

  toggle.onclick = () => {
    anim = isOpen ? animClose : animOpen
    anim.play()
    isOpen = !isOpen
  }
</script>
