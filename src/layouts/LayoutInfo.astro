---
import '../styles/global.css'
import ViewInfo from '../components/ViewInfo.astro'

const {
  frontmatter: { title, link, filepath },
} = Astro.props
---

<!DOCTYPE html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <script
      async
      src='https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6101162767732960'
      crossorigin='anonymous'
    ></script>
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css'
    />
  </head>
  <body>
    <div class='container__view'>
      <h2>{title}</h2>
      <nav>
        <a class='btn' href='/'
          ><i class='fa-solid fa-arrow-left'></i>Regresar</a
        >
        <a class='btn' href={filepath} download={title}
          ><i class='fa-solid fa-download'></i>Download</a
        >
      </nav>
      <ViewInfo link={link} path={filepath} />
      <slot />
      <div class='ad'>
        <ins
          class='adsbygoogle'
          style='display:block'
          data-ad-client='ca-pub-6101162767732960'
          data-ad-slot='9679169307'
          data-ad-format='auto'
          data-full-width-responsive='true'></ins>
        <script>
          ;(adsbygoogle = window.adsbygoogle || []).push({})
        </script>
      </div>
    </div>
  </body>
</html>
